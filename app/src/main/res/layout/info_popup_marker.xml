<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="5dp">

                <ImageView
                    android:id="@+id/bus_map_img"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bus_map_name"
                    android:text=" name"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:drawableStart="@drawable/ic_short_text_black_24dp"
                    android:textAlignment="center"
                    android:textColor="@color/hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/bus_map_contact"
                    android:textSize="16dp"
                    android:drawableStart="@drawable/ic_contact_phone_black_24dp"
                    android:text=" +923313435367"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text=" karachi."
                    android:id="@+id/bus_map_city"
                    android:paddingLeft="5dp"
                    android:drawableStart="@drawable/ic_location_city_black_24dp"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
